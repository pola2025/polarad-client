{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@polarad/database": ["./packages/database/src"],
      "@polarad/database/*": ["./packages/database/src/*"],
      "@polarad/ui": ["./packages/ui/src"],
      "@polarad/ui/*": ["./packages/ui/src/*"],
      "@polarad/lib": ["./packages/lib/src"],
      "@polarad/lib/*": ["./packages/lib/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules"]
}
